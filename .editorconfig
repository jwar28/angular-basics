# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 90

[*.{html,css,scss,js,jsx,json,ts,tsx,md,conf}]
indent_size = 2

[Makefile]
indent_size = 8
indent_style = tab
insert_final_newline = false

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.{ts, tsx, js, jsx}]
quote_type = single

[*.java]
max_line_length = 120
end_of_line = lf

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.har,*.json}]
indent_size = 2

[{*.yaml,*.yml}]
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0
